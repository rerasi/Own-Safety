<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tex"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/pecita"
        android:text="Own Safety"
        android:textColor="#00563B"
        android:textSize="50sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_hover"
        android:text="contact"
        android:textSize="22sp"
        app:backgroundTint="@color/btn_gra"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_outline_perm_contact_calendar_24"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/first"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_hover"
        android:text="SMS Alert"
        android:textSize="22sp"
        app:backgroundTint="@color/btn_gra"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_outline_perm_contact_calendar_24"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/second"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_hover"
        android:text="Basic Law"
        android:textSize="22sp"
        app:backgroundTint="@color/btn_gra"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_outline_perm_contact_calendar_24"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/third"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_hover"
        android:text="Self Defence"
        android:textSize="22sp"
        app:backgroundTint="@color/btn_gra"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_outline_perm_contact_calendar_24"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:id="@+id/panicBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/alert"
        android:orientation="horizontal"
        app:backgroundTintMode="add" />


