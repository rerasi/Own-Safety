<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pecita"
        android:text="Own Safety"
        android:textColor="#00563B"
        android:textSize="46sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corner1"
        app:backgroundTint="@color/gray"
        app:backgroundTintMode="src_over">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety in Hand!"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"
                app:fontFamily="@font/poppins_semibold"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="It is a long established fact that a reader will
be distracted."
                android:textColor="@color/ico_gray"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="400dp"
            android:layout_height="136dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:contentDescription="@illustrator"
            app:srcCompat="@drawable/banner"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Functions"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="22sp"
        app:backgroundTint="@color/transparent"
        app:backgroundTintMode="add"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/poppins_medium"
        android:gravity="start|center_vertical"
        android:insetLeft="5dp"
        android:insetTop="8dp"
        android:insetRight="5dp"
        android:insetBottom="8dp"
        android:letterSpacing="0.0"
        android:text="Add Contact SMS"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="22sp"
        app:backgroundTint="@color/transparent"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_sms"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:iconTint="@color/ico_gray"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/first"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_hover"
        android:text="SMS Alert"
        android:textAllCaps="false"
        android:textSize="22sp"
        app:backgroundTint="@color/btn_gra"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_chat"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/second"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_hover"
        android:text="Basic Law"
        android:textAllCaps="false"
        android:textSize="22sp"
        app:backgroundTint="@color/btn_gra"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_law"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/third"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_hover"
        android:text="Self Defence"
        android:textAllCaps="false"
        android:textSize="22sp"
        app:backgroundTint="@color/btn_gra"
        app:backgroundTintMode="add"
        app:icon="@drawable/ic_self_defence"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        tools:ignore="HardcodedText,TextContrastCheck" />


    <LinearLayout
        android:id="@+id/panicBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/alert"
        android:orientation="horizontal"
        app:backgroundTintMode="add" />


